{
  "name": "@tobimadehin/playground",
  "version": "1.0.0",
  "description": "Stateless, cloud-agnostic ephemeral VM orchestration engine",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "release:patch": "npm version patch && git push origin main --tags",
    "release:minor": "npm version minor && git push origin main --tags",
    "release:major": "npm version major && git push origin main --tags",
    "prepublishOnly": "npm test && npm run build"
  },
  "keywords": ["cloud", "vm", "ephemeral", "aws", "azure", "gcp", "digitalocean", "hetzner", "oracle", "dployr"],
  "author": "Emmanuel Madehin",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/tobimadehin/playground.git"
  },
  "homepage": "https://tobimadehin.github.io/playground",
  "bugs": {
    "url": "https://github.com/tobimadehin/playground/issues"
  },
  "files": [
    "dist/**/*",
    "README.md",
    "LICENSE"
  ],
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.0",
    "@types/node": "^20.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@aws-sdk/client-ec2": "^3.0.0",
    "@azure/arm-compute": "^21.0.0",
    "@azure/arm-network": "^33.0.0",
    "@azure/identity": "^4.0.0",
    "@google-cloud/compute": "^4.0.0",
    "js-yaml": "^4.1.0",
    "oci-sdk": "^2.0.0"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "testMatch": ["**/test/**/*.test.ts"],
    "collectCoverageFrom": [
      "src/**/*.ts",
      "!src/**/*.d.ts"
    ],
    "coverageReporters": ["text", "lcov", "html"],
    "coverageThreshold": {
      "global": {
        "branches": 80,
        "functions": 80,
        "lines": 80,
        "statements": 80
      }
    }
  }
}